    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Create floating hearts
            createHearts();
            
            // Section 1: Initial letter click
            document.getElementById('initial-letter').addEventListener('click', function() {
                this.classList.add('opacity-0', 'scale-90');
                setTimeout(() => {
                    document.getElementById('section1').classList.remove('active');
                    document.getElementById('section2').classList.add('active');
                    initScratchCard();
                }, 500);
            });
            
            // Section 2: Scratch card
            function initScratchCard() {
                const canvas = document.getElementById('scratch-canvas');
                const ctx = canvas.getContext('2d');
                const container = document.querySelector('.scratch-container');
                const hiddenMessage = document.getElementById('hidden-message');
                
                // Set canvas size
                function resizeCanvas() {
                    canvas.width = container.offsetWidth;
                    canvas.height = hiddenMessage.offsetHeight;
                }
                
                resizeCanvas();
                window.addEventListener('resize', resizeCanvas);
                
                // Initial fill
                ctx.fillStyle = '#cccccc';
                ctx.fillRect(0, 0, canvas.width, canvas.height);
                ctx.globalCompositeOperation = 'destination-out';
                
                let isDrawing = false;
                
                // Mouse events
                canvas.addEventListener('mousedown', startDrawing);
                canvas.addEventListener('mousemove', draw);
                canvas.addEventListener('mouseup', stopDrawing);
                canvas.addEventListener('mouseout', stopDrawing);
                
                // Touch events
                canvas.addEventListener('touchstart', startDrawing);
                canvas.addEventListener('touchmove', draw);
                canvas.addEventListener('touchend', stopDrawing);
                
                function startDrawing(e) {
                    isDrawing = true;
                    draw(e);
                }
                
                function draw(e) {
                    if (!isDrawing) return;
                    
                    const rect = canvas.getBoundingClientRect();
                    let x, y;
                    
                    if (e.type.includes('touch')) {
                        x = e.touches[0].clientX - rect.left;
                        y = e.touches[0].clientY - rect.top;
                    } else {
                        x = e.clientX - rect.left;
                        y = e.clientY - rect.top;
                    }
                    
                    ctx.beginPath();
                    ctx.arc(x, y, 20, 0, Math.PI * 2);
                    ctx.fill();
                    
                    // Check if enough is scratched
                    checkScratched();
                }
                
                function stopDrawing() {
                    isDrawing = false;
                }
                
                function checkScratched() {
                    const imageData = ctx.getImageData(0, 0, canvas.width, canvas.height);
                    const pixels = imageData.data;
                    let transparentPixels = 0;
                    
                    for (let i = 3; i < pixels.length; i += 4) {
                        if (pixels[i] === 0) {
                            transparentPixels++;
                        }
                    }
                    
                    const percentScratched = (transparentPixels / (pixels.length / 4)) * 100;
                    
                    if (percentScratched > 60) {
                        canvas.style.opacity = '0';
                        setTimeout(() => {
                            canvas.style.display = 'none';
                            document.getElementById('accept-buttons').classList.remove('hidden');
                        }, 500);
                    }
                }
                
                // Accept buttons
                const acceptButtons = document.querySelectorAll('#accept-buttons button');
                acceptButtons.forEach(button => {
                    button.addEventListener('click', function() {
                        document.getElementById('section2').classList.remove('active');
                        document.getElementById('section3').classList.add('active');
                        createDarkHearts();
                        createPopcorn();
                    });
                });
            }
            
            // Section 3: Movie selection
            const movieCards = document.querySelectorAll('.movie-card');
            movieCards.forEach(card => {
                card.addEventListener('click', function() {
                    const movieId = this.getAttribute('data-movie');
                    document.getElementById(`movie${movieId}-modal`).style.display = 'flex';
                });
            });
            
            // Close modals
            const closeButtons = document.querySelectorAll('.close-modal');
            closeButtons.forEach(button => {
                button.addEventListener('click', function() {
                    this.closest('.modal').style.display = 'none';
                });
            });
            
            // When a movie is selected (from modal)
            const modals = document.querySelectorAll('.modal-content');
            modals.forEach(modal => {
                modal.querySelector('a').addEventListener('click', function(e) {
                    e.stopPropagation();
                });
                
                modal.addEventListener('click', function(e) {
                    if (e.target === this) {
                        const movieCard = document.querySelector(`.movie-card[data-movie="${this.parentElement.id.replace('movie', '').replace('-modal', '')}"]`);
                        movieCard.style.transform = 'translateX(-100vw) rotate(-30deg)';
                        movieCard.style.opacity = '0';
                        movieCard.style.transition = 'all 1s ease';
                        
                        setTimeout(() => {
                            this.parentElement.style.display = 'none';
                            document.getElementById('section3').classList.remove('active');
                            document.getElementById('section4').classList.add('active');
                        }, 800);
                    }
                });
            });
            
            // Create floating hearts for light theme
            function createHearts() {
                const section1 = document.getElementById('section1');
                const heartCount = 15;
                
                for (let i = 0; i < heartCount; i++) {
                    const heart = document.createElement('div');
                    heart.className = 'heart';
                    heart.innerHTML = '❤️';
                    heart.style.fontSize = `${Math.random() * 20 + 10}px`;
                    heart.style.left = `${Math.random() * 100}%`;
                    heart.style.top = `${Math.random() * 100}%`;
                    heart.style.animationDelay = `${Math.random() * 5}s`;
                    section1.appendChild(heart);
                }
            }
            
            // Create floating hearts for dark theme
            function createDarkHearts() {
                const section3 = document.getElementById('section3');
                const heartCount = 15;
                
                for (let i = 0; i < heartCount; i++) {
                    const heart = document.createElement('div');
                    heart.className = 'heart dark-heart';
                    heart.innerHTML = '❤️';
                    heart.style.fontSize = `${Math.random() * 15 + 8}px`;
                    heart.style.left = `${Math.random() * 100}%`;
                    heart.style.top = `${Math.random() * 100}%`;
                    heart.style.animationDelay = `${Math.random() * 5}s`;
                    section3.appendChild(heart);
                }
            }
            
            // Create popcorn for movie section
            function createPopcorn() {
                const section3 = document.getElementById('section3');
                const popcornCount = 10;
                
                for (let i = 0; i < popcornCount; i++) {
                    const popcorn = document.createElement('div');
                    popcorn.className = 'popcorn';
                    popcorn.innerHTML = '🍿';
                    popcorn.style.fontSize = `${Math.random() * 20 + 15}px`;
                    popcorn.style.left = `${Math.random() * 100}%`;
                    popcorn.style.top = `${Math.random() * 100}%`;
                    popcorn.style.animationDelay = `${Math.random() * 5}s`;
                    section3.appendChild(popcorn);
                }
            }
        });
    </script>
</body>
</html>
